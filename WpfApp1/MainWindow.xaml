<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File" FontSize="18">
				<MenuItem Header="New" Click="MenuItem_Click_New"></MenuItem>
				<MenuItem Header="Open" Click="MenuItem_Click_Open"></MenuItem>
				<MenuItem Header="Save" Click="MenuItem_Click_Save"></MenuItem>
				<MenuItem Header="Save All" Click="MenuItem_Click_SaveAll"></MenuItem>
				<MenuItem Header="Export" Click="MenuItem_Click_Export"></MenuItem>
			</MenuItem>
		</Menu>
	
		<Grid Margin="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80*"/>
				<ColumnDefinition Width="20*"/>
			</Grid.ColumnDefinitions>



			<GridSplitter Width="5" Panel.ZIndex="1" Margin="0"/>
			<Canvas x:Name="NodeCanvas" Margin="0" Background="#FFEAE1E1"/>
			<Grid x:Name="PropertyGrid" Grid.Column="1" Margin="0,3,0,0" ShowGridLines="True"/>

		</Grid>
	</DockPanel>

	
</Window>
